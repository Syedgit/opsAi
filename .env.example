# Server
PORT=3000
NODE_ENV=development

# Authentication
# Generate a secure JWT secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-secure-random-jwt-secret-here-minimum-32-characters
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=

# WhatsApp Business API (Shared Meta Account - Option 4)
# One Meta Business Account for all stores, each store gets its own phone number
WHATSAPP_ACCESS_TOKEN=                    # Shared access token for all stores
WHATSAPP_BUSINESS_ACCOUNT_ID=             # Meta Business Account ID (for phone number management)
WHATSAPP_PHONE_NUMBER_ID=                 # Default/fallback phone number ID (optional, for backward compatibility)
WHATSAPP_APP_SECRET=                      # App secret for webhook verification
WHATSAPP_WEBHOOK_VERIFY_TOKEN=           # Webhook verification token

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/opsai?schema=public

# AWS S3 (for image storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET_NAME=
AWS_REGION=us-east-1

# Google Cloud Vision (OCR)
GOOGLE_VISION_API_KEY=
# OR use service account
GOOGLE_APPLICATION_CREDENTIALS=./path/to/service-account-key.json

# Google Sheets API
GOOGLE_SHEETS_CLIENT_EMAIL=
GOOGLE_SHEETS_PRIVATE_KEY=
GOOGLE_SHEETS_PROJECT_ID=

# OpenAI (for AI classification & extraction)
OPENAI_API_KEY=
# OpenAI model to use (default: gpt-3.5-turbo, options: gpt-4o, gpt-4-turbo, gpt-3.5-turbo)
OPENAI_MODEL=gpt-3.5-turbo
# OR use Anthropic
# ANTHROPIC_API_KEY=

# Redis (for job queue)
REDIS_URL=redis://localhost:6379

# Twilio (for SMS vendor sending)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Email (for vendor sending)
SENDGRID_API_KEY=
# OR AWS SES
# AWS_SES_REGION=

# Application
APP_URL=http://localhost:3000
LOG_LEVEL=info
