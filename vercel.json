{
  "version": 2,
  "rewrites": [
    {
      "source": "/dashboard",
      "destination": "/dashboard.html"
    },
    {
      "source": "/login",
      "destination": "/login.html"
    },
    {
      "source": "/signup",
      "destination": "/signup.html"
    },
    {
      "source": "/api/auth/google/callback",
      "destination": "/api/auth/google.ts"
    },
    {
      "source": "/api/auth/google/initiate",
      "destination": "/api/auth/google.ts"
    },
    {
      "source": "/api/auth/login",
      "destination": "/api/auth/index.ts"
    },
    {
      "source": "/api/auth/signup",
      "destination": "/api/auth/index.ts"
    },
    {
      "source": "/api/auth/me",
      "destination": "/api/auth/index.ts"
    },
    {
      "source": "/api/stores/dashboard",
      "destination": "/api/stores/index.ts"
    },
    {
      "source": "/api/stores/data",
      "destination": "/api/stores/index.ts"
    },
    {
      "source": "/api/stores/detail",
      "destination": "/api/stores/index.ts"
    },
    {
      "source": "/api/stores",
      "destination": "/api/stores/index.ts"
    },
    {
      "source": "/api/admin/phone-numbers",
      "destination": "/api/admin/phone-numbers.ts"
    },
    {
      "source": "/api/admin/stores/:storeId/phone-number",
      "destination": "/api/admin/stores/[storeId]/phone-number.ts"
    }
  ],
  "headers": [
    {
      "source": "/(.*\\.html)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:;"
        }
      ]
    }
  ]
}

